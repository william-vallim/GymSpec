@model GymSpec.Entidades.Aluno

@using (Html.BeginForm("Adiciona", "Aluno", FormMethod.Post))
{
    @Html.LabelFor(u => u.Nome, "Nome")
    @Html.TextBoxFor(u => u.Nome, new { @class = "form‐control" })
    @Html.ValidationMessageFor(u => u.Nome)

    @Html.LabelFor(u => u.Email, "E‐mail")
    @Html.TextBoxFor(u => u.Email, new { @class = "form‐control" })
    @Html.ValidationMessageFor(u => u.Email)

    @Html.LabelFor(u => u.Identidade, "Identidade")
    @Html.TextBoxFor(u => u.Identidade, new { @class = "form‐control" })
    @Html.ValidationMessageFor(u => u.Identidade)

    @Html.LabelFor(u => u.CPF, "CPF")
    @Html.TextBoxFor(u => u.CPF, new { @class = "form‐control" })
    @Html.ValidationMessageFor(u => u.CPF)

    @Html.LabelFor(u => u.Endereco, "Endereco")
    @Html.TextBoxFor(u => u.Endereco, new { @class = "form‐control" })
    @Html.ValidationMessageFor(u => u.Endereco)

    @Html.LabelFor(u => u.Situacao, "Tipo Plano")
    @Html.EnumDropDownListFor(u => u.Situacao, new { @class = "form‐control" })
    @Html.ValidationMessageFor(u => u.Situacao)


    <input type="submit" value="Cadastrar" />
}

